    #     proxy_set_header Connection $connection_upgrade;
    #     proxy_read_timeout 3600;
    #     proxy_buffering off;
    #     client_max_body_size 10G;
    # }

    # ==========================================================================
    # Auth redirect handlers
    # ==========================================================================
    location @auth_redirect {
        return 302 /auth/login?redirect=$request_uri;
    }

    location @auth_redirect_guac {
        return 302 /auth/login?redirect=/guacamole/;
    }

    # ==========================================================================
    # Headscale API (for Tailscale clients - no auth needed)
    # ==========================================================================
    location /ts2021 {
        proxy_pass http://127.0.0.1:8080;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_buffering off;
    }

    location /machine {
        proxy_pass http://127.0.0.1:8080;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_buffering off;
    }

    location /key {
        proxy_pass http://127.0.0.1:8080;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_buffering off;
    }

    location /register {
        proxy_pass http://127.0.0.1:8080;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_buffering off;
    }

    location /noise {
        proxy_pass http://127.0.0.1:8080;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_buffering off;
    }
}
