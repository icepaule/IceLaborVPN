# =============================================================================
# IceLaborVPN Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# =============================================================================
# Headscale Configuration
# =============================================================================
HEADSCALE_DOMAIN=headscale.example.com
HEADSCALE_SERVER_IP=192.0.2.1
HEADSCALE_USER=lab

# =============================================================================
# Guacamole Configuration
# =============================================================================
GUAC_ADMIN_USER=admin
GUAC_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD
GUAC_DB_PASSWORD=CHANGE_ME_DB_PASSWORD
GUAC_TOTP_ISSUER=IceLaborVPN

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_DB=guacamole
POSTGRES_USER=guacamole
POSTGRES_PASSWORD=CHANGE_ME_DB_PASSWORD

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
SSL_EMAIL=admin@example.com
SSL_DOMAIN=headscale.example.com

# =============================================================================
# Internal Network (Tailscale)
# =============================================================================
TAILSCALE_NETWORK=${TAILSCALE_NETWORK}
CAPE_HOST=${CAPE_HOST}
CAPE_SSH_PORT=22
CAPE_WEB_PORT=8443
COCKPIT_PORT=9090

# =============================================================================
# Fail2ban Configuration
# =============================================================================
F2B_MAXRETRY=5
F2B_FINDTIME=300
F2B_BANTIME=3600

# =============================================================================
# Rate Limiting
# =============================================================================
NGINX_LOGIN_RATE=5r/m
NGINX_GENERAL_RATE=30r/s

# =============================================================================
# Pushover Notifications
# =============================================================================
PUSHOVER_APP_TOKEN=your_app_token_here
PUSHOVER_USER_KEY=your_user_key_here

# Notification settings
NOTIFY_ON_LOGIN=true
NOTIFY_ON_SESSION=true
NOTIFY_ON_BAN=true
NOTIFY_ON_ATTACK=true
NOTIFY_ON_SERVICE_DOWN=true

# =============================================================================
# AbuseIPDB Integration
# =============================================================================
# API key for reporting malicious IPs and fetching blocklists
# Register at https://www.abuseipdb.com/ to obtain a key
ABUSEIPDB_API_KEY=your_abuseipdb_api_key_here
